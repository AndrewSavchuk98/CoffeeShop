<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".presentation.screens.cart.CartFragment"
    android:id="@+id/linearLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        tools:layout_conversion_absoluteHeight="329dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp">



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/itemImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/americano_150x200scale6_00x"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                tools:layout_conversion_absoluteHeight="200dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_conversion_absoluteWidth="150dp" />

            <TextView
                android:id="@+id/coffeeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_editor_absoluteY="232dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="379dp" />

            <TextView
                android:id="@+id/coffeeDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:text="some milk and some description some milk and some description"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="40dp"
                tools:layout_editor_absoluteY="272dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="379dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink size"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_editor_absoluteY="345dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_conversion_absoluteWidth="379dp" />


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_editor_absoluteY="393dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_conversion_absoluteWidth="268dp">

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="small"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="393dp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_conversion_absoluteWidth="88dp" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medium"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="393dp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_conversion_absoluteWidth="94dp" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="big"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="393dp"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_conversion_absoluteWidth="88dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toppings"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_editor_absoluteY="457dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_conversion_absoluteWidth="379dp" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_editor_absoluteY="506dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_conversion_absoluteWidth="379dp">

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boba"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="506dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_conversion_absoluteWidth="57dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almond"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="506dp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_conversion_absoluteWidth="73dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_editor_absoluteY="506dp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_conversion_absoluteWidth="71dp" />

    </com.google.android.material.chip.ChipGroup>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_editor_absoluteY="554dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        app:cardCornerRadius="32dp"
        tools:layout_conversion_absoluteHeight="80dp"
        tools:layout_editor_absoluteY="554dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp">



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@drawable/ic_round_horizontal_rule_24"
                app:backgroundTint="#026307"
                app:fabSize="mini"
                app:tint="@color/white"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_editor_absoluteY="570dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_conversion_absoluteWidth="48dp" />

            <TextView
                android:id="@+id/countItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24sp"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_editor_absoluteY="577dp"
                tools:layout_editor_absoluteX="72dp"
                tools:layout_conversion_absoluteWidth="13dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO"
                android:src="@drawable/ic_round_add_24"
                app:backgroundTint="#026307"
                app:fabSize="mini"
                app:tint="@color/white"
                tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_editor_absoluteY="570dp"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_conversion_absoluteWidth="48dp" />



    </androidx.cardview.widget.CardView>


</LinearLayout>